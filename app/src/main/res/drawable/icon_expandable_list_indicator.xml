<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_expanded="true">
        <layer-list>
            <item android:top="14dp" android:bottom="14dp" android:right="14dp" android:left="14dp">
                <rotate android:fromDegrees="180" android:drawable="@drawable/icon_small_triangle" />
            </item>
        </layer-list>
    </item>
    <item android:state_expanded="false">
        <layer-list>
            <item android:top="14dp" android:bottom="14dp" android:right="14dp" android:left="14dp" android:drawable="@drawable/icon_small_triangle" />
        </layer-list>
    </item>
</selector>